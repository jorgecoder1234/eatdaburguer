<div class="container">

    <div class="jumbotron">
        <h1 id="color-override">Eat Da Burger</h1>

        <form class="create-form">
            <div class="form-group">

                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">submit
                </button>
            </div>
        </form>

    </div>



    <div class="row">
        <div class="col s12 m5">
            <div class="card">

                <div class="card-content">
                    <ul>
                        {{#each burgers}} {{#unless devoured}}
                        <span>
                            <strong> {{this.id}} - {{this.burger_name}} </strong>
                        </span>
                        <button type="button" class="devourerburger btn btn-warning" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">
                            Devoured
                        </button>
                        <hr> {{/unless}} {{/each}}
                    </ul>



                </div>
                <div class="card-action">
                    <a href="#">BURGUERS</a>
                </div>
            </div>
        </div>

        <div class="col s12 m5">
            <div class="card">

                <div class="card-content">
                    <ul>
                        <ul>
                            {{#each burgers}} {{#if devoured}}
                            <span>
                                <strong> {{this.id}} - {{this.burger_name}} </strong>
                            </span>
                            <button type="button" class="deleteburger btn btn-danger" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">
                                Delete
                            </button>
                            <hr> {{/if}} {{/each}}
                        </ul>



                </div>
                <div class="card-action">
                    <a href="#">DEVOURED BURGUERS</a>
                </div>
            </div>
        </div>


    </div>



</div>
<!-- /container -->